{
    "name": "yucadoo/elasticsearcher-fractal",
    "type": "library",
    "description": "Combines Elasticsearcher with PHP League's Fractal package for easier document management.",
    "keywords": [
        "yucadoo",
        "elastic",
        "elasticsearch",
        "elasticsearcher",
        "elasticsearcher-fractal",
        "fractal"
    ],
    "homepage": "https://github.com/yucadoo/elasticsearcher-fractal",
    "license": "MIT",
    "authors": [
        {
            "name": "Hrvoje Jukic",
            "email": "hrcajuka@gmail.com",
            "homepage": "https://yuca.ba",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "~7.2",
        "league/fractal": "^0.19.2",
        "madewithlove/elasticsearcher": "^0.5.2",
        "psr/container": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=8.0",
        "squizlabs/php_codesniffer": "^3.0"
    },
    "autoload": {
        "psr-4": {
            "YucaDoo\\ElasticSearcher\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "YucaDoo\\ElasticSearcher\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        },
        "thanks": {
            "name": "madewithlove/elasticsearcher",
            "url": "https://github.com/madewithlove/elasticsearcher"
        }
    },
    "config": {
        "sort-packages": true
    }
}
